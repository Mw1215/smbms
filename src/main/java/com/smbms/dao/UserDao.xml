    <insert id="add" parameterType="com.smbms.pojo.User">
        insert into smbms_user
            (
             userCode,
             userName,
             userPassword
             )
             values
                    (
                     #{userCode},
                     #{userName},
                     #{userPassword}
                     );
    </insert>

